# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = false
max_line_length = 220

[{*.js,*.jsx,*.ts,*.tsx}]
indent_size = 2

[{*.json,*.yml,*.yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = true
indent_size = 2
